<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleverAppen.Views.LoginPage"
             Title="LoginPage">
    <Frame>
        <VerticalStackLayout>
            <Label Text="Login" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Entry Placeholder="Username" HorizontalOptions="CenterAndExpand" x:Name="UsernameTextBox"></Entry>
            <Entry Placeholder="Password" HorizontalOptions="CenterAndExpand" IsPassword="True" x:Name="PasswordTextBox"/>
            <Button x:Name="LoginButton" Text="Login" CornerRadius="10" Clicked="LoginButton_Clicked"/>
        </VerticalStackLayout>
    </Frame>

</ContentPage>
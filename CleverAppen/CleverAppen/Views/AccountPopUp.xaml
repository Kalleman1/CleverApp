<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CleverAppen.Views.AccountPopUp">
    <VerticalStackLayout>
        <Button x:Name="AccountSettingsButton" Clicked="AccountSettingsButton_Clicked"
                Text="Account Settings"
                ImageSource="settings.png"></Button>
        <Button x:Name="SwitchCompanyButton" 
                Clicked="SwitchCompanyButton_Clicked" 
                Text="Switch Company"></Button>
        <Button x:Name="LogOutButton" 
                Clicked="LogOutButton_Clicked" 
                Text="Log out" TextColor="Red" 
                ImageSource="logout.png"></Button>
    </VerticalStackLayout>
</toolkit:Popup>
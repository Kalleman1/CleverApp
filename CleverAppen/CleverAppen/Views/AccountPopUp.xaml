<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CleverAppen.Views.AccountPopUp">
    <VerticalStackLayout BackgroundColor="White">
        <Label Text="Account options:"
               HorizontalOptions="Center"></Label>
        <Button x:Name="AccountSettingsButton" 
                Clicked="AccountSettingsButton_Clicked"
                Text="Account Settings"
                ImageSource="settings.png"
                BackgroundColor="White"
                TextColor="Black"
                Margin="10"
                ></Button>
        <Button x:Name="SwitchCompanyButton" 
                Clicked="SwitchCompanyButton_Clicked" 
                Text="Switch Company"
                BackgroundColor="White"
                TextColor="Black"
                Margin="10"></Button>
        <Button x:Name="LogOutButton" 
                Clicked="LogOutButton_Clicked" 
                Text="Log out"
                ImageSource="logout.png"
                BackgroundColor="White"
                TextColor="Red"
                Margin="10"></Button>
    </VerticalStackLayout>
</toolkit:Popup>